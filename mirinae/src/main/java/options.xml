<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="optionsns">
	<insert id="insert" parameterType="options"> <!-- 입력, 수정, 삭제는 resultType이 필요없다 -->
		insert into options values( #{opt_code},#{opt_name},#{opt_price},#{p_no})
	</insert>
	<select id="select"  resultType="integer">
		select count(*)+1 from options
	</select>
	<select id="selectList" parameterType="string" resultType="options">
		select * from options where p_no = #{p_no}
	</select>
</mapper>